<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.demo.bedprojectbefore.mapper.GoodMapper">
    <select id="goodList" resultType="org.demo.bedprojectbefore.pojo.Goods">
        select * from goods
        <where>
            <if test="goodsName != null and goodsName != ''">
                and goodsName = #{goodsName}
            </if>
            <if test="goodsManufactor != null and goodsManufactor != ''">
                and goodsManufactor = #{goodsManufactor}
            </if>
            <if test="start != null and end != null and start != 'undefined'">
                and cTime between #{start} and #{end}
            </if>
        </where>
        limit #{pageNo},#{pageSize}
    </select>
    <select id="getGoodCount" resultType="int">
        SELECT COUNT(*) FROM `goods`
        <trim prefix="where" prefixOverrides="and|or">
            <if test="goodsName!=null and goodsName!=''">
                AND `goodsName` LIKE concat('%',#{goodsName},'%')
            </if>
            <if test="goodsManufactor!=null and goodsManufactor!=''">
                AND `goodsManufactor` = #{goodsManufactor}
            </if>
            <if test="start != null and end != null and start != 'undefined'">
                AND cTime BETWEEN #{start} and #{end}
            </if>
        </trim>
    </select>
    <select id="selIdGood" resultType="org.demo.bedprojectbefore.pojo.Goods">
        SELECT * FROM `goods` WHERE `goodsId` =#{goodsId}
    </select>
    <delete id="delGood">
        delete from goods where goodsId=#{goodsId}
    </delete>
    <insert id="addGoods">
        INSERT INTO `chaperonebed`.`goods` (
          `goodsId`,
          `goodsName`,
          `goodsPic`,
          `goodsSpec`,
          `goodsManufactor`,
          `goodsRegistration`,
          `cTime`,
          `uTime`,
          `isFlag`
        )
        VALUES
          (
            #{goodsId},
            #{goodsName},
            #{goodsPic},
            #{goodsSpec},
            #{goodsManufactor},
            #{goodsRegistration},
            #{cTime},
            #{uTime},
            #{isFlag}
  )
    </insert>
</mapper>